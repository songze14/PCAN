<Page
    x:Class="PCAN.View.RealtimePage.SysTemSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataMonitoringSetting="clr-namespace:PCAN.UserControls.DataMonitoringSettings"
    xmlns:local="clr-namespace:PCAN.View.RealtimePage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SysTemSettingsPage"
    d:Background="AliceBlue"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    Background="AliceBlue"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <GroupBox Header="升级">
            <DockPanel>
                <Label
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="重发次数" />
                <TextBox
                    x:Name="RetryCountTextBox"
                    Width="50"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="3" />
                <Label
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="超时/s" />
                <TextBox
                    x:Name="TimeoutTextBox"
                    Width="50"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="5" />
                <Label
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="包大小/byte" />
                <TextBox
                    x:Name="PackSizeTextBox"
                    Width="50"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="5" />
                <Button
                    x:Name="SaveUploadSettingsButton"
                    Width="100"
                    Content="保存设置"
                    DockPanel.Dock="Left" />
            </DockPanel>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="参数读取" />
        <GroupBox
            Grid.Row="2"
            MinHeight="400"
            Header="数据监控">
            <dataMonitoringSetting:DataMonitoringPlotParmUserControl x:Name="DataMonitoringPlotParmUserControl" />
        </GroupBox>
    </Grid>
</Page>
