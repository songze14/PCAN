<Page
    x:Class="PCAN.View.RealtimePage.DataMonitoringPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:PCAN.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCAN.View.RealtimePage"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DataMonitoringPage"
    d:DesignHeight="1450"
    d:DesignWidth="1800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ContentControl x:Name="PlotCon" Grid.Row="0" />

        <Border Grid.Row="1" Background="AliceBlue">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>
                <ScrollViewer Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
                    <WrapPanel>
                        <WrapPanel x:Name="SendParmGroup">

                            <GroupBox Margin="5">
                                <GroupBox.Header>
                                    <StackPanel Height="15">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="White"
                                            Text="发送数据" />
                                    </StackPanel>
                                </GroupBox.Header>
                                <ScrollViewer MinHeight="80" VerticalScrollBarVisibility="Auto">
                                    <WrapPanel>
                                        <Label Content="0:" />
                                        <ComboBox
                                            x:Name="SendData0Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                        <Label Content="1:" />
                                        <ComboBox
                                            x:Name="SendData1Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                        <Label Content="2:" />
                                        <ComboBox
                                            x:Name="SendData2Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                        <Label Content="3:" />
                                        <ComboBox
                                            x:Name="SendData3Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                        <Label Content="4:" />
                                        <ComboBox
                                            x:Name="SendData4Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                        <Label Content="5:" />
                                        <ComboBox
                                            x:Name="SendData5Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                        <Label Content="6:" />
                                        <ComboBox
                                            x:Name="SendData6Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                        <Label Content="7:" />
                                        <ComboBox
                                            x:Name="SendData7Combox"
                                            MinWidth="120"
                                            DisplayMemberPath="Name" />
                                    </WrapPanel>
                                </ScrollViewer>


                            </GroupBox>


                        </WrapPanel>
                        <DockPanel>
                            <Label
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="拟发送" />
                            <TextBlock
                                x:Name="SendDataTextBlock"
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="01-00-02-00" />
                        </DockPanel>
                        <Button
                            x:Name="RefParmButton"
                            Margin="5"
                            Content="刷新参数">
                            <Button.Style>
                                <Style BasedOn="{StaticResource MaterialDesignFlatMidBgButton}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=SendParmGroup}" Value="False">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=SendParmGroup}" Value="True">
                                            <Setter Property="IsEnabled" Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button
                            x:Name="LockSendDataButton"
                            Margin="5"
                            Content="锁定">
                            <Button.Style>
                                <Style BasedOn="{StaticResource MaterialDesignFlatMidBgButton}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=SendParmGroup}" Value="False">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=SendParmGroup}" Value="True">
                                            <Setter Property="IsEnabled" Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button
                            x:Name="UnLockSendDataButton"
                            Margin="5"
                            Content="解锁">
                            <Button.Style>
                                <Style BasedOn="{StaticResource MaterialDesignFlatMidBgButton}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=SendParmGroup}" Value="False">
                                            <Setter Property="IsEnabled" Value="True" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=SendParmGroup}" Value="True">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>




                    </WrapPanel>
                </ScrollViewer>
                <Grid Grid.Row="1" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="自动区间" />
                        <TextBox
                            x:Name="LimitCountTextBox"
                            Grid.Column="1"
                            Width="100"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" />
                    </Grid>
                    <Button
                        x:Name="StartButton"
                        Grid.Column="1"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="开始" />
                    <Button
                        x:Name="StopButton"
                        Grid.Column="2"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="停止" />
                </Grid>
            </Grid>
        </Border>
        <ToolBarTray Grid.Row="2">
            <ToolBar ClipToBounds="False" Style="{StaticResource MaterialDesignToolBar}">
                <Button
                    x:Name="ConnectionCanButton"
                    Click="ConnectionCanButton_Click"
                    Content="{materialDesign:PackIcon Kind=Connection}"
                    ToolTip="连接CAN" />

            </ToolBar>
        </ToolBarTray>
        <ToolBarOverflowPanel x:Name="CanConnectiontoolbar" Visibility="Hidden">
            <control:PCanClientUsercontrol x:Name="PCanClientUsercontrol" />
        </ToolBarOverflowPanel>

    </Grid>
</Page>
