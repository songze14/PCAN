<Page
    x:Class="PCAN.View.RealtimePage.DataMonitoringPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:PCAN.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCAN.View.RealtimePage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DataMonitoringPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="3*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <control:PCanClientUsercontrol x:Name="PCanClientUsercontrol" Grid.Row="0" />
        <Border Grid.Row="1" Background="AliceBlue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <GroupBox Margin="5" Header="发送参数">
                    <WrapPanel>
                        <Label Content="开始ID" />
                        <TextBox
                            x:Name="SendStartIdTextBox"
                            Width="100"
                            VerticalAlignment="Top"
                            Text="100" />
                        <Label Content="开始参数" />
                        <TextBox
                            x:Name="SendStartParmTextBox"
                            Width="100"
                            VerticalAlignment="Top"
                            Text="100" />
                        <Label Content="获取数据ID" />
                        <TextBox
                            x:Name="GetDataIDTextBox"
                            Width="100"
                            VerticalAlignment="Top"
                            Text="100" />
                        <GroupBox Margin="5">
                            <GroupBox.Header>
                                <StackPanel Height="15">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="White"
                                        Text="发送数据" />
                                </StackPanel>
                            </GroupBox.Header>
                            <WrapPanel>
                                <Label Content="0:" />
                                <ComboBox
                                    x:Name="SendData0Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                                <Label Content="1:" />
                                <ComboBox
                                    x:Name="SendData1Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                                <Label Content="2:" />
                                <ComboBox
                                    x:Name="SendData2Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                                <Label Content="3:" />
                                <ComboBox
                                    x:Name="SendData3Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                                <Label Content="4:" />
                                <ComboBox
                                    x:Name="SendData4Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                                <Label Content="5:" />
                                <ComboBox
                                    x:Name="SendData5Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                                <Label Content="6:" />
                                <ComboBox
                                    x:Name="SendData6Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                                <Label Content="7:" />
                                <ComboBox
                                    x:Name="SendData7Combox"
                                    MinWidth="120"
                                    DisplayMemberPath="Name" />
                            </WrapPanel>

                        </GroupBox>
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="拟发送" />
                        <TextBlock
                            x:Name="SendDataTextBlock"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="01-00-02-00" />
                        <Button x:Name="LockSendDataButton" Content="锁定" />
                    </WrapPanel>
                </GroupBox>
                <GroupBox
                    Grid.Column="1"
                    Margin="5"
                    Header="接收参数">
                    <WrapPanel>
                        <Label Content="接收ID" />
                        <TextBox
                            x:Name="ReceiveIdTextBox"
                            Width="100"
                            Text="100" />
                        <Label Content="接收数据" />
                        <TextBox
                            x:Name="ReceiveDataTextBox"
                            Width="200"
                            Text="01 02 03 04 05 06 07 08" />
                    </WrapPanel>
                </GroupBox>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button Content="开始" />
                    <Button Grid.Row="1" Content="停止" />
                </Grid>
            </Grid>
        </Border>
        <ContentControl x:Name="PlotCon" Grid.Row="2" />

    </Grid>
</Page>
