<Page x:Class="PCAN.View.UserPage.RealtimePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCAN.View.UserPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" d:Background="AliceBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="端口"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="PortsList" Grid.Column="1" DisplayMemberPath="PortName" SelectedValuePath="PortsNum" Margin="5" Width="150"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="波特率" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="BaudRatesList" Grid.Column="1" DisplayMemberPath="BaudRateName" SelectedValuePath="Baudrate" Margin="5" Width="150"/>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="DeviceID" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="DeviceIDList" Grid.Column="1"  Margin="5" IsEditable="True" >
                    <ComboBoxItem>0x102</ComboBoxItem>
                    <ComboBoxItem>0x103</ComboBoxItem>
                    <ComboBoxItem>0x104</ComboBoxItem>
                    <ComboBoxItem>0x106</ComboBoxItem>
                    <ComboBoxItem>0x1A6</ComboBoxItem>
                    <ComboBoxItem>0x1A7</ComboBoxItem>
                    <ComboBoxItem>0x1A8</ComboBoxItem>
                    <ComboBoxItem>0x1A9</ComboBoxItem>
                    <ComboBoxItem>0x1AA</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="帧间隔" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                <TextBox x:Name="FrameInterval" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" MinWidth="100">

                </TextBox>
            </Grid>
            <Button x:Name="Connect" Grid.Column="2" Grid.Row="1"  Content="连接"  Margin="5" />
            <Button x:Name="UnConnect" Grid.Row="2" Grid.Column="2"  Content="断开"  Margin="5" />
            <Button x:Name="RefreshPort" Grid.Column="0" Grid.Row="0"  Content="刷新端口"  Margin="5" /> 
            <Label x:Name="ConnectLab" Grid.Row="0" Grid.Column="3"/>

        </Grid>
        <!--#endregion-->
        <!--#region 数据展示-->
        <DataGrid x:Name="CanMessageDataGrid" Grid.Row="2"  Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="时间戳" Binding="{Binding Timestamp}" Width="*"/>-->
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*"/>
                <DataGridTextColumn Header="类型" Binding="{Binding MSGTYPE}" Width="*"/>
                <DataGridTextColumn Header="长度" Binding="{Binding LEN}" Width="*"/>
                <DataGridTextColumn Header="数据" Binding="{Binding DATA}" Width="*"/>
                <DataGridTextColumn Header="次数" Binding="{Binding Count}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--#endregion-->
    </Grid>
</Page>
