<Page x:Class="PCAN.View.RealtimePage.ParmValueSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCAN.View.RealtimePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1200"
      x:Name="ParmValuePage"
      Title="ParmValueSetting" d:Background="AliceBlue"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ParmSetButton" Content="参数值设置" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        </Grid>
        <DataGrid Grid.Row="1" x:Name="ParmDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
  SelectionUnit="FullRow" >
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="时间戳" Binding="{Binding Timestamp}" Width="*"/>-->
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"  />
                <DataGridTextColumn Header="序号" Binding="{Binding Index}" />

                <DataGridTextColumn Header="名称" Binding="{Binding Name}" />
                <DataGridTextColumn Header="大小" Binding="{Binding Size}" />
                <DataGridTextColumn Header="开始位" Binding="{Binding StatrtIndex}" />
                <DataGridTextColumn Header="结束位" Binding="{Binding EndIndex}" />
                <DataGridTemplateColumn Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Button Content="编辑" Command="{Binding ViewModel.ParmEditCommand,ElementName=ParmValuePage}" />
                                <Button Content="删除" Command="{Binding ViewModel.ParmDeleteCommand,ElementName=ParmValuePage}"/>
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
