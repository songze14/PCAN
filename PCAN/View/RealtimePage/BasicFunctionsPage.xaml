<Page x:Class="PCAN.View.UserPage.BasicFunctionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCAN.View.UserPage"
      xmlns:usercontrols="clr-namespace:PCAN.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" d:Background="AliceBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <usercontrols:PCanClientUsercontrol x:Name="PcanClientUsercontrol" Grid.Row="0"/>

        <!--#endregion-->
        <!--#region 数据展示-->
        <DataGrid x:Name="CanMessageDataGrid" Grid.Row="2"  Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="时间戳" Binding="{Binding Timestamp}" Width="*"/>-->
                <DataGridTextColumn Header="ID" Binding="{Binding ID,StringFormat={}{0:X2}}" Width="*"/>
                <DataGridTextColumn Header="类型" Binding="{Binding MSGTYPE}" Width="*"/>
                <DataGridTextColumn Header="长度" Binding="{Binding LEN}" Width="*"/>
                <DataGridTextColumn Header="数据" Binding="{Binding DATASTR}" Width="*"/>
                <DataGridTextColumn Header="次数" Binding="{Binding Count}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--#endregion-->
    </Grid>
</Page>
