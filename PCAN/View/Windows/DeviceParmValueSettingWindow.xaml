<Window x:Class="PCAN.View.Windows.DeviceParmValueSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCAN.View.Windows"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="参数修改" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="BorderBrush" Value="AliceBlue"/>
            <Setter Property="TextBlock.Background" Value="Aqua"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="50"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="20"/> 
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="ID" />
        <TextBox x:Name="ID" Grid.Column="1" Width="300" Height="50" />
        <Label Content="名称" Grid.Row="1"/>
        <TextBox x:Name="Name" Grid.Column="1" Grid.Row="1" Width="300" Height="50"/>
        <!--<Label Content="数据开始位" Grid.Row="2"/>
        <TextBox x:Name="DataStatrtIndex" Grid.Column="2" Grid.Row="2" Width="300" Height="50"/>
        <Label Content="数据结束位" Grid.Row="3"/>
        <TextBox x:Name="DataEndIndex" Grid.Column="3" Grid.Row="3" Width="300" Height="50"/>-->
        <!--<Label Content="大小" Grid.Row="4"/>
        <TextBox x:Name="Size" Grid.Column="1" Grid.Row="4" Width="300" Height="50"/>-->
        <!--<Label Content="解析开始位" Grid.Row="4"/>
        <TextBox x:Name="StatrtIndex" Grid.Column="1" Grid.Row="4" Width="300" Height="50"/>
        <Label Content="解析结束位" Grid.Row="5"/>
        <TextBox x:Name="EndIndex" Grid.Column="1" Grid.Row="5" Width="300" Height="50"/>-->
        <Label Content="数据类型" Grid.Row="2"/>
        <ComboBox x:Name="TargetType" Grid.Column="1" Grid.Row="2" Width="300" Height="50" DisplayMemberPath="Name"/>
        <Grid Grid.ColumnSpan="2" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="SaveButton" Content="保存" Click="SaveButton_Click"/>
            <Button x:Name="CloseButton" Content="取消" Grid.Column="1" Click="CloseButton_Click" />
        </Grid>
    </Grid>
</Window>
