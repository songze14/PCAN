<Window x:Class="PCAN.View.Windows.DeviceParmValueImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCAN.View.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="参数导入" Height="450" Width="500">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="DeviceParmValueStrTextBox" Background="AliceBlue" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True" VerticalScrollBarVisibility ="Auto"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Content="解析" x:Name="ParseButton"/>
                <Button Content="取消" x:Name="CloseButton" Grid.Row="1" Click="CloseButton_Click"/>
                <TextBlock TextWrapping="Wrap" Text="将文本复制进左侧输入框,点击解析按钮。
                           注意文本中只能出现英文的;不能出现其他字符 
                           解析规范 类型 变量名称;\\备注
                           例 u8 MachineProductSN0;\\备注" Grid.Row="2" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
