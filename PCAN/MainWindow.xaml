<Window x:Class="PCAN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:PCAN"
        xmlns:vm="clr-namespace:PCAN.ViewModle"
        WindowState="Maximized"
        mc:Ignorable="d"
         d:Height="450" d:Width="1200" Closed="Window_Closed" d:DataContext="{d:DesignData Type=vm:BasicFunctionsPageViewModel}">

    <DockPanel LastChildFill="True">
        
        <!--#region菜单-->
        <Border x:Name="left" BorderThickness="2" BorderBrush="CadetBlue"  DockPanel.Dock="Left" Width="260" Visibility="Visible" >
            <Menu>
                <Menu.Resources>
                    <Style TargetType="MenuItem">
                        <Setter Property="Background" Value="#FF00FFFF"></Setter>
                        <Setter Property="FontFamily" Value="微软雅黑"></Setter>
                        <Setter Property="FontSize" Value="18pt"></Setter>
                        <Setter Property="FontWeight" Value="Bold"></Setter>
                        <Setter Property="Height" Value="50"></Setter>
                    </Style>
                </Menu.Resources>
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem x:Name="BasicFunctions" Header="基本功能" Click="MenuItem_Click"/>
                <MenuItem x:Name="PCANDataParse" Header="PCANDATA信息解析" Click="PCANDataParse_Click"/>

            </Menu>
        </Border>
        <Frame Name="navWin" 
       Margin="0,0,0,0" DockPanel.Dock="Left"
       NavigationUIVisibility="Hidden" 
       HorizontalAlignment="Stretch" 
       VerticalAlignment="Stretch"
       VerticalContentAlignment="Stretch"
       HorizontalContentAlignment="Stretch"
       Background="#FF1E3853"
       ScrollViewer.VerticalScrollBarVisibility="Visible" 
       ScrollViewer.HorizontalScrollBarVisibility="Visible"  >
        </Frame>
        <!--#endregion-->
        <!--#region连接设置-->
       
    </DockPanel>
</Window>
