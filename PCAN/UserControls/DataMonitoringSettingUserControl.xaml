<UserControl
    x:Class="PCAN.UserControls.DataMonitoringSettingUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCAN.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <GroupBox Header="曲线参数">
                <Grid>
                    <!--<Grid.ColumnDefinitions>
                 <ColumnDefinition/>
                 <ColumnDefinition/>
             </Grid.ColumnDefinitions>-->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <DockPanel>
                            <Button
                                x:Name="RefreshParmButton"
                                Width="100"
                                Height="30"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="刷新" />
                            <Button
                                x:Name="SaveParmButton"
                                Width="100"
                                Height="30"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="保存" />
                        </DockPanel>
                        <DataGrid
                            x:Name="DataParmDataGrid"
                            Grid.Row="1"
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Index}" Header="序号" />
                                <DataGridTextColumn Binding="{Binding Name}" Header="名称" />
                                <DataGridTextColumn Binding="{Binding Type}" Header="数据类型" />
                                <DataGridTextColumn Binding="{Binding Size}" Header="大小" />
                                <DataGridTextColumn Binding="{Binding Remark}" Header="备注" />
                                <!--<DataGridTemplateColumn Header="操作">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Button Command="{Binding ViewModel.ParmEditCommand, ElementName=ParmValuePage}" Content="编辑" />
                                                <Button Command="{Binding ViewModel.ParmDeleteCommand, ElementName=ParmValuePage}" Content="删除" />
                                            </DockPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>-->
                            </DataGrid.Columns>

                        </DataGrid>
                        <DockPanel Grid.Column="1">
                            <Button
                                x:Name="AnalysisParmstrButton"
                                Width="120"
                                Height="30"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="《-导入参数" />
                        </DockPanel>
                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            BorderBrush="AntiqueWhite"
                            BorderThickness="1">
                            <TextBox
                                x:Name="DeviceParmValueStrTextBox"
                                AcceptsReturn="True"
                                Background="AliceBlue"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </Border>

                    </Grid>

                </Grid>
            </GroupBox>
        </DockPanel>
    </Grid>
</UserControl>
