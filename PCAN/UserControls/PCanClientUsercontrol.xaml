<UserControl
    x:Class="PCAN.UserControls.PCanClientUsercontrol"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCAN.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="AliceBlue"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignOutlinedComboBox}" TargetType="ComboBox" />
    </UserControl.Resources>
    <Grid>

        <Grid Grid.Row="0" Background="AliceBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="端口" />
                <ComboBox
                    x:Name="PortsList"
                    Grid.Column="1"
                    Width="150"
                    Margin="5"
                    DisplayMemberPath="PortName"
                    SelectedValuePath="PortsNum" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="波特率">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                <Label
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="连接参数">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                <ComboBox
                    x:Name="BaudRatesList"
                    Grid.Column="1"
                    Margin="5"
                    DisplayMemberPath="BaudRateName"
                    SelectedValuePath="Baudrate">
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource MaterialDesignOutlinedComboBox}" TargetType="ComboBox">
                            <Setter Property="Height" Value="45" />
                            <Setter Property="Width" Value="180" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
                <ComboBox
                    x:Name="BaudFDRatesList"
                    Grid.Column="1"
                    Margin="5"
                    DisplayMemberPath="BaudRateName"
                    SelectedValuePath="Baudrate">
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource MaterialDesignOutlinedComboBox}" TargetType="ComboBox">
                            <Setter Property="Height" Value="45" />
                            <Setter Property="Width" Value="180" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=EnableCanFdCheckBox}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="DeviceID" />
                <ComboBox
                    x:Name="DeviceIDList"
                    Grid.Column="1"
                    Margin="5"
                    IsEditable="True">
                    <ComboBoxItem>102</ComboBoxItem>
                    <ComboBoxItem>103</ComboBoxItem>
                    <ComboBoxItem>104</ComboBoxItem>
                    <ComboBoxItem>106</ComboBoxItem>
                    <ComboBoxItem>1A6</ComboBoxItem>
                    <ComboBoxItem>1A7</ComboBoxItem>
                    <ComboBoxItem>1A8</ComboBoxItem>
                    <ComboBoxItem>1A9</ComboBoxItem>
                    <ComboBoxItem>1AA</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="帧间隔" />
                <TextBox
                    x:Name="FrameInterval"
                    Grid.Column="1"
                    MinWidth="100"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Grid>
            <Button
                x:Name="Connect"
                Grid.Row="1"
                Grid.Column="2"
                Margin="5"
                Content="连接" />
            <Button
                x:Name="UnConnect"
                Grid.Row="2"
                Grid.Column="2"
                Margin="5"
                Content="断开" />
            <Button
                x:Name="RefreshPort"
                Grid.Row="0"
                Grid.Column="0"
                Margin="5"
                Content="刷新端口" />
            <DockPanel Grid.Column="1" LastChildFill="False">
                <CheckBox
                    x:Name="EnableCanFdCheckBox"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="CANFD" />
            </DockPanel>
            <Label
                x:Name="ConnectLab"
                Grid.Row="0"
                Grid.Column="3" />

        </Grid>


    </Grid>
</UserControl>
