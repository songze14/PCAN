<UserControl
    x:Class="PCAN.UserControls.DataMonitoringSettings.DataMonitoringPlotParmUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCAN.UserControls.DataMonitoringSettings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="AliceBlue"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid>
            <WrapPanel>
                <Label Content="开始ID" />
                <TextBox
                    x:Name="StartIdTextBox"
                    Width="100"
                    VerticalAlignment="Top"
                    Text="3F3"
                    ToolTip="数据十六进制，不需要写0x" />
                <Label Content="获取数据ID" />
                <TextBox
                    x:Name="GetDataIDTextBox"
                    Width="100"
                    VerticalAlignment="Top"
                    Text="3f3"
                    ToolTip="数据十六进制，不需要写0x" />
                <Label Content="接收ID" />
                <TextBox
                    x:Name="ReciveDataIdTextBlock"
                    Width="100"
                    Text="3f3"
                    ToolTip="数据十六进制，不需要写0x" />
                <Label Content="停止ID" />
                <TextBox
                    x:Name="StopIdTextBox"
                    Width="100"
                    Text="3f3"
                    ToolTip="数据十六进制，不需要写0x" />
                <Button x:Name="SaveParmButton" Content="保存" />

            </WrapPanel>

        </Grid>
        <GroupBox Grid.Row="1" Header="曲线参数">
            <Grid>
                <!--<Grid.ColumnDefinitions>
                 <ColumnDefinition/>
                 <ColumnDefinition/>
             </Grid.ColumnDefinitions>-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <Button
                            x:Name="RefreshPlotParmButton"
                            Width="100"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="刷新" />
                        <Button
                            x:Name="SavePlotParmButton"
                            Width="100"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="保存" />
                    </DockPanel>
                    <DataGrid
                        x:Name="DataParmDataGrid"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Index}" Header="序号" />
                            <DataGridTextColumn Binding="{Binding Name}" Header="名称" />
                            <DataGridTextColumn Binding="{Binding Type}" Header="数据类型" />
                            <DataGridTextColumn Binding="{Binding Size}" Header="大小" />
                            <DataGridTextColumn Binding="{Binding Remark}" Header="备注" />
                            <!--<DataGridTemplateColumn Header="操作">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Button Command="{Binding ViewModel.ParmEditCommand, ElementName=ParmValuePage}" Content="编辑" />
                                                <Button Command="{Binding ViewModel.ParmDeleteCommand, ElementName=ParmValuePage}" Content="删除" />
                                            </DockPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>-->
                        </DataGrid.Columns>

                    </DataGrid>
                    <DockPanel Grid.Column="1">
                        <Button
                            x:Name="AnalysisParmstrButton"
                            Width="120"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="《-导入参数" />
                    </DockPanel>
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        BorderBrush="AntiqueWhite"
                        BorderThickness="1">
                        <TextBox
                            x:Name="DeviceParmValueStrTextBox"
                            AcceptsReturn="True"
                            Background="AliceBlue"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Border>

                </Grid>

            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
