<Window x:Class="PCAN_AutoCar_Test_Client.View.WriteSNWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCAN_AutoCar_Test_Client.View"
        mc:Ignorable="d"
        Title="写SN" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Label Content="SN码:" VerticalAlignment="Center" HorizontalAlignment="Center" DockPanel.Dock="Left"/>
            <TextBox x:Name="SNTextBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" DockPanel.Dock="Left" InputMethod.IsInputMethodEnabled="False"/>
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="WriteButton" Content="写入" Width="120" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="CloseButton" Content="取消" Width="120" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Center" Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
