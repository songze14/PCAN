<Window x:Class="PCAN_AutoCar_Test_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCAN_AutoCar_Test_Client"
        xmlns:usercontrols="clr-namespace:PCAN_AutoCar_Test_Client.UserControls"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="电控测试" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="200"/>-->
            <ColumnDefinition/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <!--#region菜单-->
        <Border x:Name="left" BorderThickness="2"  Grid.Column="0" Grid.ColumnSpan="2"   >
            <TextBlock x:Name="TitleTextblock"  VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="30" Foreground="PaleVioletRed" ForceCursor="True" FontWeight="Black"/>
        </Border>
        <Frame Name="navWin" 
    Margin="0,0,0,0" Grid.Column="0"
               Grid.Row="1"
    NavigationUIVisibility="Hidden" 
    HorizontalAlignment="Stretch" 
    VerticalAlignment="Stretch"
    VerticalContentAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    Background="#FF1E3853"
    ScrollViewer.VerticalScrollBarVisibility="Visible" 
    ScrollViewer.HorizontalScrollBarVisibility="Visible"  >
        </Frame>
        <!--#endregion-->
        <!--#region连接设置-->
        <usercontrols:UILogsView x:Name="uilogView" Grid.Column="2" Grid.Row="1"/>
    </Grid>
</Window>
